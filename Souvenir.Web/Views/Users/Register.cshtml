@model Souvenir.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "ثبت نام";
}


<main class="login-signUp">
    <div class="form-container">
        @using (Html.BeginForm("Register", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <header class="login-header">
                <h4>ثبت نام</h4>
                <a href="/">
                    صفحه اصلی
                    <i class="fas fa-house-chimney"></i>
                </a>
            </header>
            <div class="logo">
                <img src="~/Images/favicon.png" alt="Logo">
            </div>
            @Html.ValidationSummary()

            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.EditorFor(model => model.Name, new { htmlattributes = new { placeholder = "نام", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.EditorFor(model => model.Family, new { htmlattributes = new { placeholder = "نام خانوادگی", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Family)
            </div>
            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.EditorFor(model => model.Email, new { htmlattributes = new { placeholder = "ایمیل", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.EditorFor(model => model.PhoneNumber, new { htmlattributes = new { placeholder = "شماره تماس", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber)
            </div>
            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.EditorFor(model => model.Address, new { htmlattributes = new { placeholder = "آدرس", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Address)
            </div>
            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.EditorFor(model => model.Password, new { htmlattributes = new { placeholder = "کلمه عبور", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlattributes = new { placeholder = "تکرار کلمه عبور", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
            <div class="submit">
                <button type="submit">ثبت نام</button>
            </div>
            <div class="related-links">
                <a href="/Login">
                    <i class="fas fa-lock"></i>
                    <p>ورود به سایت</p>
                </a>
            </div>

            <div class="other-ways">
                <a href="#" class="google" title="ورود با حساب گوگل">
                    <i class="fab fa-google"></i>
                </a>
            </div>
        }
    </div>
</main>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
