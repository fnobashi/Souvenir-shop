@model Souvenir.ViewModels.VerifyCodeViewModel
@{
    ViewBag.Title = "تایید کد دو مرحله ای";
}

<h2>VerifyCode</h2>

<h2>@ViewBag.Title.</h2>





<main class="login-signUp">
    <div class="form-container">
        @using (Html.BeginForm("VerifyCode", "Users", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            <header class="login-header">
                <h4>ورود به سایت</h4>
                <a href="/">
                    صفحه اصلی
                    <i class="fas fa-house-chimney"></i>
                </a>
            </header>
            <div class="logo">
                <img src="~/Images/favicon.png" alt="Logo">
            </div>

            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.Hidden("provider", @Model.Provider)
            @Html.Hidden("rememberMe", @Model.RememberMe)
            <h4>@ViewBag.Status</h4>

            <div class="desc">
                <p>کد دو مرحله ورود به سایت به ایمیل شما ارسال شد</p>
                <p>لطفا کد را وارد نمایید</p>
            </div>
            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.TextBoxFor(model => model.Code, new { placeholder = "کد", autocomplete = "off" })
            </div>
           
         
            <div class="submit">
                <button type="submit">ورود</button>
            </div>
        }
    </div>
</main>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}