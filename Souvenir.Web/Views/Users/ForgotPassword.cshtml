@model Souvenir.ViewModels.ForgotPasswordViewModel

@{
    ViewBag.Title = "فراموشی کلمه عبور";
}

<main class="login-signUp">
    <div class="form-container">
        @using (Html.BeginForm("ForgotPassword", "Users", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()


            <header class="login-header">
                <h4>ورود به سایت</h4>
                <a href="/">
                    صفحه اصلی
                    <i class="fas fa-house-chimney"></i>
                </a>
            </header>
            <div class="logo">
                <img src="~/Images/favicon.png" alt="Logo">
            </div>
            @Html.ValidationSummary()
            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "ایمیل خود را وارد کنید" })
            </div>
            <div class="submit">
                <button type="submit">ورود</button>
            </div>
        }
    </div>
</main>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
