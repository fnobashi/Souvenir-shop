@model Souvenir.ViewModels.UpdateUserViewModel

@{
    ViewBag.Title = "ویرایش اطلاعات کاربر";
}



<main class="login-signUp">
    <div class="form-container">


        @using (Html.BeginForm("UpdateUserInformation", "UsersManager", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <header class="login-header">
                <h4>ویرایش اطلاعات کاربر</h4>
                <a href="/">
                    صفحه اصلی
                    <i class="fas fa-house-chimney"></i>
                </a>
            </header>
            <div class="logo">
                <img src="~/Images/favicon.png" alt="Logo">
            </div>

            @Html.ValidationSummary()


            @Html.HiddenFor(model => model.UserId)

            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.EditorFor(model => model.Name, new { htmlattributes = new { placeholder = "نام", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.EditorFor(model => model.Family, new { htmlattributes = new { placeholder = "نام خانوادگی", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Family)
            </div>

            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.EditorFor(model => model.UserName, new { htmlattributes = new { placeholder = "نام کاربری", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.UserName)
            </div>

            <div class="form-inputs">
                <i class="fas fa-lock"></i>
                @Html.EditorFor(model => model.Address, new { htmlattributes = new { placeholder = "آدرس", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Address)
            </div>
            
            <div class="submit">
                <button type="submit">ویرایش</button>
            </div>
        }

    </div>
</main>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
