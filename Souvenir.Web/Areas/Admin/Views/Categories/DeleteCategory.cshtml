@model Souvenir.ViewModels.Admin.Categories.DeleteViewModel
@{
    Layout = null;
}


<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">حذف</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            
            @using (Ajax.BeginForm("DeleteConfirmed", routeValues: new { IsAjax = true } , new AjaxOptions { HttpMethod ="Post" , UpdateTargetId = "table-body", OnComplete = "DeleteSuccessed()" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID)

                <fieldset class="d-flex align-items-center">
                    <img src="~/CategoryImages/@Model.ImageSrc" class="rounded-1 img-thumbnail" style="width :80px; height:80px; object-fit: cover;" />
                    <div class="d-flex mx-3">
                        <label>نام دسته بندی :</label>
                        <p>@Model.CategoryName</p>
                    </div>
                </fieldset>
                <fieldset class="my-3">
                    <button type="submit" class="btn btn-danger">حذف</button>
                </fieldset>
            }

        </div>
    </div>
</div>