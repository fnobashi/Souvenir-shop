@model Souvenir.ViewModels.Admin.Souvenirs.DeleteViewModel
@{
    Layout = null;
}



<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">حذف</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("DeleteConfirmed", routeValues: new { IsAjax = true }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "table-body", OnComplete = "DeleteSuccessed()" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <fieldset class="d-flex mx-3">
                    @Html.LabelFor(model => model.Name)
                    <p>@Model.Name</p>
                </fieldset>
                <fieldset class="d-flex mx-3">
                    @Html.LabelFor(model => model.Category)
                    <p>@Model.Category</p>
                </fieldset>

                <fieldset class="d-flex mx-3">
                    @Html.LabelFor(model => model.Provice)
                    <p>@Model.Provice</p>
                </fieldset>

                <fieldset class="d-flex align-items-center">
                    @Html.LabelFor(model => model.ImageSrc)    
                    <img src="~/SouvenirMainImages/@Model.ImageSrc" class="rounded-1 img-thumbnail" style="width :80px; height:80px; object-fit: cover;" />
                </fieldset>
                <fieldset class="my-3">
                    <button type="submit" class="btn btn-danger">حذف</button>
                </fieldset>
            }

        </div>
    </div>
</div>
