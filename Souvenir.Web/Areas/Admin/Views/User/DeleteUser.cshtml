@using Souvenir.ViewModels.Admin.User
@model  UserViewModel

@{
    Layout = null;
}



<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">حذف</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            <fieldset class="d-flex mx-3">
                @Html.LabelFor(model => model.UserName)
                <p class="mx-1">@Model.UserName</p>
            </fieldset>


            <fieldset class="d-flex mx-3">
                @Html.LabelFor(model => model.Name)
                <p class="mx-1">@Model.Name</p>
            </fieldset>

            <fieldset class="d-flex mx-3">
                @Html.LabelFor(model => model.Roles)
                <p class="mx-1">
                    @foreach (var item in Model.Roles)
                    {
                        <text> @item.RoleName </text>
                    }

                </p>
            </fieldset>

            <p>آیا از حذف این کاربر مطمئن هستید؟</p>

            @using (Ajax.BeginForm("DeleteConfirmed", "User", ajaxOptions: new AjaxOptions
            {
                HttpMethod = "Post",
                UpdateTargetId = "table-body",
                OnComplete = "Sucsess()"
            }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.UserId)
                <button type="submit" class="btn btn-danger">حدف</button>
            }


            <fieldset class="my-2">
                <button type="submit" data-bs-dismiss="modal" class="btn btn-secondary">بستن</button>
            </fieldset>
        </div>
    </div>
</div>



